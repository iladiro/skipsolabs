<div class="thumbnail thumb-brand">
  <div class="thumb-brand__image text-center">
    <%= image_tag image, class: 'img-responsive' %>
  </div>
  <div class="caption text-center">
    <h3 class="thumb-brand__title text-uppercase">
      <%= title %>
    </h3>
    <p class="thumb-brand__description">
      <%= description %>
    </p>
  </div>
</div>
